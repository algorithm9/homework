def embed_chunks(chunks: List[Dict]) -> List[Dict]:
    embedder = milvus_model.DefaultEmbeddingFunction()
    results = []

    for i, chunk in enumerate(chunks):
        embedding = embedder(chunk["content"])
        results.append({
            "id": i,  # 添加 id 字段
            "content": chunk["content"],
            "path": chunk["path"],
            "vector": embedding
        })


    return results

